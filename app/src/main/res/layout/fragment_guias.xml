<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/kioskoheader_homebackground"
    tools:context=".fragments.GuiasFragment">

    <LinearLayout
        android:id="@+id/bButon"
        android:backgroundTint="@color/black"
        android:backgroundTintMode="multiply"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="100dp"
        android:orientation="horizontal"/>

    <Button
        android:id="@+id/llTitulo"
        android:layout_below="@+id/bButon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/transparent"
        android:text="Guías rápidas"
        android:textColor="@color/black"
        android:textSize="25sp" />


    <TextView
        android:id="@+id/txtv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/llTitulo"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:text="@string/dentro_de_t"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <GridView
        android:id="@+id/GuiasRapidasLista"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/txtv"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="10dp"
        android:columnWidth="150dp"
        android:horizontalSpacing="0dp"
        android:numColumns="auto_fit"
        android:verticalSpacing="10dp" />

</RelativeLayout>


